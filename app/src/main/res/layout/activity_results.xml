<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Results">

    <Space
        android:id="@+id/topspace"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        app:srcCompat="@drawable/textron"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        android:layout_below="@+id/topspace"/>

    <TextView
        android:id="@+id/resulttv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="81dp"
        android:text="TextView"
        android:textSize="30sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/header"
        android:layout_width="278dp"
        android:layout_height="128dp"
        android:layout_above="@+id/resulttv"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-94dp"
        android:text="@string/resultsheader"
        android:textAlignment="center"
        android:textSize="24sp" />

    <Button
        android:id="@+id/incorrectbutton"
        android:layout_width="60dp"
        android:layout_height="111dp"
        android:layout_below="@+id/lowerspace"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="-8dp"
        android:layout_marginEnd="50dp"
        android:background="@color/quantum_error_light"
        android:text="@string/incorrectbutton"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <Space
        android:id="@+id/lowerspace"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/setbutton" />

    <Button
        android:id="@+id/setbutton"
        android:layout_width="60dp"
        android:layout_height="111dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="177dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/buttonshape_d"
        android:text="@string/settowingclass"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <Space
        android:id="@+id/midspace"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/incorrectbutton" />

    <Button
        android:id="@+id/scanagainbutton"
        android:layout_width="280dp"
        android:layout_height="111dp"
        android:layout_below="@+id/midspace"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="-33dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/buttonshape_c"
        android:text="@string/scanagainbutton"
        android:textColor="#FFFFFF"
        android:textSize="25dp" />
</RelativeLayout>
