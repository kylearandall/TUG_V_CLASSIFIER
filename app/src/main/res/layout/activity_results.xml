<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Results">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        app:srcCompat="@drawable/textron"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/resulttv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="81dp"
        android:text="TextView"
        android:textSize="30sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/resulttv"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-71dp"
        android:text="@string/resultsheader"
        android:textSize="24sp"
        android:layout_below="@+id/logo"/>

    <Button
        android:id="@+id/incorrectbutton"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lowerspace"
        android:layout_centerHorizontal="true"
        android:text="@string/incorrectbutton" />

    <Space
        android:id="@+id/lowerspace"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/setbutton" />

    <Button
        android:id="@+id/setbutton"
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="160dp"
        android:text="@string/settowingclass" />

    <Space
        android:id="@+id/midspace"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/incorrectbutton" />

    <Button
        android:id="@+id/scanagainbutton"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/midspace"
        android:layout_centerHorizontal="true"
        android:text="@string/scanagainbutton" />
</RelativeLayout>